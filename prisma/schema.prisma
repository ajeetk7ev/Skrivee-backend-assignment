generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Author {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  name                 String
  total_fans           Int
  total_faves          Int
  total_skrivees       Int
  total_skrivees_read  Int
  profile_completeness Int
  score                Float?
  rank                 Int?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}